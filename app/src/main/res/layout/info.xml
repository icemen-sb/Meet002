<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ru.relastic.meet002.InfoActivity" android:orientation="vertical">

    <TextView
            android:text="INFO-Activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textAlignment="center"
            android:textSize="30sp"/>
    <Button
            android:text="to SPLASH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnToSplash"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText" android:text="Empty" android:textSize="30sp" android:textAlignment="center"/>
</LinearLayout>