<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAIN-Activiity"
            android:visibility="visible" android:textAlignment="center" android:textSize="30sp"/>
    <Button
            android:text="Previous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnPrevious"/>
    <Button
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnNext"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText" android:text="Empty" android:textSize="30sp" android:textAlignment="center"/>

</LinearLayout>